<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2B5CD"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD BRANCH"
                    android:textColor="#FF1493"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#FF1493"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/branch_name_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHI JKLMNOPQRSTUVWXYZ"
                    android:drawableRight="@drawable/help_icon"
                    android:hint="Kisii boxhouse"
                    android:textColorHint="#8B5A00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="#FF1493"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/branch_location_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHI JKLMNOPQRSTUVWXYZ"
                    android:drawableRight="@drawable/help_icon"
                    android:hint="Sansora complex-Kisii"
                    android:textColorHint="#8B5A00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#FF1493"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/branch_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHI JKLMNOPQRSTUVWXYZ,-1234567890"
                    android:drawableRight="@drawable/help_icon"
                    android:hint="56-100 kisii"
                    android:textColorHint="#8B5A00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:paddingBottom="5dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="#FF1493"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/branch_contact_et"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@drawable/help_icon"
                    android:hint="0790959933"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColorHint="#8B5A00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gradient_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="5dp" >

                <Button
                    android:id="@+id/addbranch"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_style"
                    android:text="Add branch"
                    android:textColor="#4B0082"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>