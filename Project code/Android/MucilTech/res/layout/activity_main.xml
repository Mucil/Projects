<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_pane_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Menu Lateral -->

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:background="#7EC0EE"
        
        >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_select"
                    android:drawableTop="@drawable/sl_bt_dashboard"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Home"
                    android:textStyle="bold"
                    android:textColor="#EE1289" 
                    android:onClick="onDashBoard"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:background="#9400D3"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_select"
                    android:drawableTop="@drawable/sl_bt_visitors"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="Register"
                    android:textStyle="bold"
                    android:textColor="#EE1289"
                    android:onClick="onRegister"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#9400D3"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_select"
                    android:drawableTop="@drawable/sl_bt_sources"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textStyle="bold"
                    android:text="Wallet"
                    android:textColor="#EE1289" 
                    android:onClick="onWallet"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#9400D3"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_select"
                    android:drawableTop="@drawable/sl_bt_sites"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textStyle="bold"
                    android:text="Products"
                    android:textColor="#EE1289"
                    android:onClick="onProducts" />
                
                 <TextView
                    android:id="@+id/textView3"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#9400D3"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_select"
                    android:drawableTop="@drawable/sites"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textStyle="bold"
                    android:text="Branches"
                    android:textColor="#EE1289" 
                    android:onClick="onBranches"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="125dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#9400D3"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_select"
                    android:drawableTop="@drawable/sl_bt_logout"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textStyle="bold"
                    android:text="Authority"
                    android:textColor="#EE1289" 
                    android:onClick="onAuthority"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </RelativeLayout>

</android.support.v4.widget.SlidingPaneLayout>