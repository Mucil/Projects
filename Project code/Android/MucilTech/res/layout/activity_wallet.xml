<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2B5CD"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_bar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:gravity="center"
                android:text="Wallet balance"
                android:textColor="#EEEE00"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_stroke3"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="15dp" >

                <EditText
                    android:id="@+id/wallet_pin_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/next"
                    android:hint="Identification"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColorHint="#FF1493" />

                <Button
                    android:id="@+id/wallet_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_style"
                    android:text="Balance"
                    android:textColor="#4B0082"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="15dp" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="Wallet recharge"
                    android:textColor="#EEEE00"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_stroke3"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="15dp" >

                <EditText
                    android:id="@+id/wallet_pin2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/next"
                    android:hint="Identification"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColorHint="#FF1493" />

                <EditText
                    android:id="@+id/wallet_id_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/next"
                    android:hint="Transaction ID"
                    android:textColorHint="#FF1493" />

                <Button
                    android:id="@+id/wallet_transact"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@drawable/btn_style"
                    android:text="Recharge"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>